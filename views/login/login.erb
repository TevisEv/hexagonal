<!-- views/login/login.erb -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Iniciar Sesión</title>
  <style>
    /* General styles */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f0f0f0;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .login-container {
      background-color: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.1);
      max-width: 350px;
      width: 100%;
      text-align: center;
    }

    h1 {
      color: #2f5f2f;
      font-size: 2em;
      margin-bottom: 15px;
      font-weight: bold;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 10px;
      text-align: left;
    }

    label {
      font-size: 1em;
      color: #333;
    }

    input {
      padding: 10px;
      font-size: 1em;
      border: 1px solid #ddd;
      border-radius: 5px;
      width: 100%;
      box-sizing: border-box;
      transition: border-color 0.3s ease;
    }

    input:focus {
      border-color: #6cbf6c;
      outline: none;
    }

    button {
      padding: 10px;
      background-color: #6cbf6c;
      color: white;
      font-size: 1.1em;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }

    button:hover {
      background-color: #56a756;
      transform: translateY(-2px); /* Lift effect */
    }

    button:active {
      background-color: #469646;
      transform: translateY(0); /* Reset lift */
    }

    .forgot-password {
      font-size: 1em;
      color: #6cbf6c;
      text-decoration: none;
      margin-top: 10px;
      transition: color 0.3s ease;
    }

    .forgot-password:hover {
      color: #469646;
    }

    .error-message {
      color: red;
      font-size: 1em;
      margin-top: 10px;
      text-align: center;
    }

    /* Elegant message popup */
    .message-container {
      display: none;
      font-size: 1.2em;
      color: #333;
      background-color: rgba(255, 255, 255, 0.95);
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      max-width: 80%;
      text-align: center;
      animation: showMessage 1s ease-in-out;
    }

    @keyframes showMessage {
      0% {
        opacity: 0;
        transform: translate(-50%, -50%) scale(0.8);
      }
      100% {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
      }
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .login-container {
        padding: 20px;
        width: 90%;
      }

      h1 {
        font-size: 1.8em;
      }

      input, button {
        font-size: 1em;
      }
    }
  </style>
</head>
<body>

  <div class="login-container">
    <h1>Iniciar Sesión</h1>
    <form method="POST" action="/login">
      <label for="email">Correo:</label>
      <input type="email" name="email" id="email" required placeholder="Introduce tu correo electrónico">
      <br>
      <label for="password">Contraseña:</label>
      <input type="password" name="password" id="password" required placeholder="Introduce tu contraseña">
      <br>
      <button type="submit">Iniciar Sesión</button>
    </form>

    <% if @error %>
      <p class="error-message"><%= @error %></p>
    <% end %>

    <a href="javascript:void(0);" class="forgot-password" onclick="showContactMessage()">¿Olvidaste tu contraseña?</a>
  </div>

  <div class="message-container" id="contactMessage">
    <p>¡Ups! Parece que olvidaste tu contraseña. Para recuperar el acceso, por favor, contacta con el administrador del servicio.</p>
    <p><strong>Administrador: contacto@ejemplo.com</strong></p>
    <button onclick="closeMessage()">Cerrar</button>
  </div>

  <script>
    // Function to show the contact message with animation
    function showContactMessage() {
      var messageDiv = document.getElementById('contactMessage');
      messageDiv.style.display = 'block';
    }

    // Function to close the contact message
    function closeMessage() {
      var messageDiv = document.getElementById('contactMessage');
      messageDiv.style.display = 'none';
    }
  </script>

</body>
</html>